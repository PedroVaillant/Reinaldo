    <main>
        <div class="formadd">
            <h1>Cadastrar um novo brinquedo</h1>
            <hr>
            <form action="brinquedo/cadastrar" method="POST">
                <div class="mb-3">
                    <label for="nome" class="form-label">Nome</label>
                    <input type="text" class="form-control" name="nome" placeholder="Digite o nome do brinquedo">
                </div>
                <div class="mb-3">
                    <label for="marca" class="form-label">Marca</label>
                    <input type="text" class="form-control" name="marca" placeholder="Qual e a marca do brinquedo?">
                </div>
                <div class="mb-3">
                    <label for="material" class="form-label">Tipo de material</label>
                    <input type="text" class="form-control" name="material" placeholder="Qual e o tipo de material?">
                </div>
                <div class="mb-3">
                    <label for="preco" class="form-label">Preço</label>
                    <input type="text" class="form-control" name="preco" placeholder="Qual e o valor do brinquedo?">
                </div>
